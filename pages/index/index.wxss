/**index.wxss**/
.userinfo {
  width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 100px
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.post {
    float: right;
    background-color: #2aa515;
    position: fixed;
    bottom: 30px;
    right: 20px;  
    border: 0 solid #ffffff;
    border-radius: 50px;
    box-shadow: 1px 1px 1px #cccccc;
    width:14vw;
    height:14vw;
    font-size: 20px;
}




/**重点在于阴影的设计**/
.card {
    border: 2px solid #ffffff;
    border-radius: 8px;
    background-color: #ffffff;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 10px;
    margin-bottom: 15px;
    position: relative;
}

.image {
    width: 100%;
    height: 180px;
    background-color: #eeeeee;
}

.time {
    float: right;
    margin-top: 170px;
    color: #ffffff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    font-size: 12px;
}

.view_hide{   
 display: none;   
}   
.view_show{   
 display: block;  
}