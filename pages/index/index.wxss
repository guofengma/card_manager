.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.post {
    float: right;
    background-color: #1296db;
    position: fixed;
    bottom: 30px;
    right: 20px;  
    border: 0 solid #ffffff;
    border-radius: 50px;
    box-shadow: 4px 1px 1px #cccccc;
    width:14vw;
    height:14vw;
    font-size: 20px;
}